<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="styles/style.css">
    <title>To-Do List</title>
</head>
<body>
    <header>
        <h1>TODO List</h1>
    </header>
    <form action="/add" method="POST">
        <input type="text" name="task" placeholder="Write a Task" class="input">
        <button type="submit" class="add-task">Add task</button>
    </form>
    <div class="flex-container">
        <ul class="list">
            <% if (locals.array.length == 0) { %>
             <div class="container">
                 <h2>No tasks yet</h2>
             </div>
            <% } else{ %>
            <div class="container">
                <% array.forEach((element,index)=>{ %>
                    <li class="todo-item">
                        <div class="task"><%= index+1 %>. <%=element %></div>
                        <div class="buttons">
                            <a href="/delete? index=<%= index %>">Delete</a>
                        </div>
                    </li>
                <%});}%>
            </div>
        </ul>
    </div>
    <script src="../index.js"></script>

</body>
</html>